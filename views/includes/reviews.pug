div(class="user-reviews")
  div(class="user-reviews__new")
    if(user)
      button(type="button" id="newUserReview" class="user-reviews__new-user-review") Add Review

      div(class="new-review__rating")
        div(class="new-review__rating-mask")
        div(class="new-review__rating-color-layer" id="userReviewStarColor")
        div(class="new-review__rating-interaction-layer")
          div(class="new-review__rating-star-ctrl" id="userReviewStar1Selection")
          div(class="new-review__rating-star-ctrl" id="userReviewStar2Selection")
          div(class="new-review__rating-star-ctrl" id="userReviewStar3Selection")
          div(class="new-review__rating-star-ctrl" id="userReviewStar4Selection")
          div(class="new-review__rating-star-ctrl" id="userReviewStar5Selection")
  
  
  h2 What people are saying about #{spot.name}  
    ion-icon(name="chatbox")
  div(class="user-reviews__list")
    each review in spot.Reviews
      div(class="user-review")
        div(class="user-review__user")
          div(class="user-review__avatar")=review.User.username.slice(0,1).toUpperCase()
          p=review.User.username
        div(class="user-review__review")
          div(class="user-review__rating")=review.stars
          p(class="user-review__date")= `Reviewed on: ${new Date(Date.parse(review.createdAt)).toDateString()}`
          h3(class="user-review__title")=review.title
          p(class="user-review__body")=review.body