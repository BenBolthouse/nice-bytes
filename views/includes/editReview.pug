div(class='review-form__container hidden' id='editReviewForm')
  form(action=`/api/spots/reviews/${review.id}`, method='put')
    a(class='review-form__link') Edit Review
    div(class='review-form__item')
      label Title 
      input(type='text' name='title' required=true)
    div(class='review-form__item')
      label(id='review-form__star-label') Please select a star rating
      select(type='text' name='stars' required=true)
        option(value='5') 5
        option(value='4') 4
        option(value='3') 3
        option(value='2') 2
        option(value='1') 1
    div(class='review-form__item')
      label(id='review-form__body-label') Review 
      textarea(name='body' required=true)
    input(type='hidden' name='_csrf' value=csrf)
    button(type='submit' class='edit-review__submit') Submit Edit 
    button(type='button' class='edit-review__cancel') Cancel